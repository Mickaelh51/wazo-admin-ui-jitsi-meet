#!/bin/sh
# Copyright 2017 HUBERT Mickael  (see the AUTHORS file)
# SPDX-License-Identifier: MIT

case "$1" in
    build)
        ;;

    package)
        cp -R wazo_plugind_admin_ui_jitsi_meet_nonofficial ${pkgdir}/
        cp -R etc ${pkgdir}/
        ;;

    install)
        systemctl restart wazo-admin-ui
        ;;

    uninstall)
        rm -f /etc/wazo-admin-ui/conf.d/50-wazo-plugin-parking-lot.yml
        systemctl restart wazo-admin-ui
        ;;

    *)
        echo "$0 called with unknown argument '$1'" >&2
        exit 1
    ;;
esac
